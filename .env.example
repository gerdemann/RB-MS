# Database
DATABASE_URL=postgresql://rbms:rbms_password@postgres:5432/rbms

# Application
NODE_ENV=production
PORT=3000
APP_TITLE=RB-MS

# Authentication - REQUIRED: Set secure values before deploying
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
ADMIN_EMAIL=YOUR_ADMIN_EMAIL_HERE
ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Prisma
RUN_SEED=false

# Optional: Microsoft Entra ID (Single Sign-On)
# ENTRA_TENANT_ID=
# ENTRA_CLIENT_ID=
# ENTRA_CLIENT_SECRET=
# ENTRA_REDIRECT_URI=http://localhost:3000/auth/entra/callback
# ENTRA_POST_LOGIN_REDIRECT=http://localhost:3000/#/

# Optional: Frontend URL for CORS (if frontend runs separately)
# FRONTEND_URL=http://localhost:5173
# CORS_ORIGIN=http://localhost:5173

# Optional: Cookie settings
# COOKIE_SAMESITE=lax
# COOKIE_SECURE=false
